<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notes : Backend project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="">
    <div class="container mt-5">
        <div class="form">
            <form action="/create" method="post">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Note Name</label>
                    <input type="text" class="form-control outline-dark" id="exampleFormControlInput1"
                       name="fileName" placeholder="Note Name">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Notel Tittle</label>
                    <input type="text" class="form-control outline-none" id="exampleFormControlInput1"
                       name="noteTitle" placeholder="Note Tittle">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                    <textarea class="form-control outline-none" id="exampleFormControlTextarea1" rows="1"
                       name="noteDesc" placeholder="Note Description"></textarea>
                </div>
                <button class="btn btn-primary" type="submit" value="Create task">Create Tasks</button>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="row ">
            <% if(files.length> 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="col-md-4 mt-4 ">
                        <div class="card" style="width: 100%;">
                            <div class="card-body">
                                <h5 class="card-title"><%= val %></h5>
                                <a href="/read/<%= val %>" class="card-link text-decoration-none">Read more</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h4 class="my-4">No Task Available...</h4>
            <% } %>
                            
                           
        </div>
    </div>

</body>

</html>